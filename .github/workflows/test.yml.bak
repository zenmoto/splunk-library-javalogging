name: Java CI with Maven

on:
  push:
    branches: [ master, develop ]
  pull_request:
    branches: [ master, develop ]

jobs:
  build:

    runs-on: ubuntu-latest

#    services:
#      splunk:
#        image: splunk/splunk:latest
#
    steps:
      - uses: actions/checkout@v2
      - name: Set up JDK 1.8
        uses: actions/setup-java@v1
        with:
          java-version: 1.8
      - name: Unit Tests
        run: mvn -B verify -P Unittest --file pom.xml
      - name: Integration Tests
        run: mvn -B verify -P AcceptanceTest --file pom.xml
